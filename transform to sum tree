class Solution{
    public void toSumTree(Node root){
         //add code here.
         solve(root);
    }
    public int solve(Node root){
        if(root==null) return 0;
        
        int lst=solve(root.left);
        int rst=solve(root.right);
        int x=root.data;
        root.data=lst+rst;
        return lst+rst+x;
    }
}
